pipeline {
    agent any

    environment {
        scannerHome = tool 'Sonar'  
        VENV_DIR = "venv" 
    }

    stages {
        stage('Clone Repository') {
            steps {
                echo 'Cloning the repository...'
                git branch: 'main', url: 'git@github.com:avengers-p11/attendance-api.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                echo 'Installing required dependencies...'
                sh '''
                    # Install python3-venv and pip3
                    echo "Installing python3-venv and pip3..."
                    sudo apt-get install -y python3-venv python3-pip
                '''
            }
        }

        stage('Setup Python Virtual Environment') {
            steps {
                echo 'Setting up the Python virtual environment...'
                sh '''
                    # Create a virtual environment if it doesn't exist
                    if [ ! -d "$VENV_DIR" ]; then
                        python3 -m venv $VENV_DIR
                    fi

                    # Ensure pip is available in the virtual environment
                    ${VENV_DIR}/bin/python -m ensurepip --upgrade
                    ${VENV_DIR}/bin/pip install --upgrade pip

                    # Install required Python packages
                    ${VENV_DIR}/bin/pip install -r requirements.txt || echo "requirements.txt not found, skipping dependency installation."
                    
                    # Ensure pytest is installed
                    ${VENV_DIR}/bin/pip install pytest
                '''
            }
        }

        stage('Bug Analysis') {
            steps {
                echo 'Running SonarQube analysis for bugs...'
                script {
                    withSonarQubeEnv('Sonar') {
                        sh """
                          ${scannerHome}/bin/sonar-scanner \
                            -Dsonar.projectKey=attendance \
                            -Dsonar.projectName=Attendance-api \
                            -Dsonar.login=sqp_c0ccdb9c12fb89544be6fbed55184ce1d418f304 \
                            -Dsonar.java.binaries=target/classes \
                            -Dsonar.issue.types=BUG
                        """
                    }
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline completed.'
            // No need to archive artifacts or generate a report anymore
        }
        success {
            emailext(
                mimeType: 'text/html',
                body: """<html>
                            <body>
                                <h2>Jenkins Build ${currentBuild.currentResult}</h2>
                                <p>Job: ${env.JOB_NAME}</p>
                                <p>Build Number: ${env.BUILD_NUMBER}</p>
                                <p>Status: ${currentBuild.currentResult}</p>
                                <p>More details at: <a href="${env.BUILD_URL}">${env.BUILD_URL}</a></p>
                            </body>
                         </html>""",
                to: 'anjalidhiman.as@gmail.com',
                subject: "Jenkins Build ${currentBuild.currentResult}: Job ${env.JOB_NAME}"
            )
        }
        failure {
            echo 'Pipeline failed.'
            emailext(
                mimeType: 'text/html',
                to: 'anjalidhiman.as@gmail.com',
                subject: 'Jenkins Pipeline Failure: Salary-api',
                body: """<html>
                            <body>
                                <h2>Pipeline Failure</h2>
                                <p>Hello,</p>
                                <p>The Jenkins pipeline has failed. Please check the logs for details.</p>
                            </body>
                         </html>"""
            )
        }
    }
}
