@Library('Jenkins-shared-libraries') _

pipeline {
    agent any

    stages {
        // Stage to clone the repository
        stage('Code Clone') {
            steps {
                script {
                    clone_repo()  
                }
            }
        }

        // Stage for unit testing
        stage('Unit Testing') {
            steps {
                script {
                    unit_testing('Maven')  
                }
            }
        }
    }

    post {
        success {
            script {
                send_email(
                    "Unit Testing Success: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                    "The unit tests have been executed successfully.\n\nPlease find the attached unit test report.",
                    "target/surefire-reports",  // Path to the directory where your unit test reports are saved
                    "TEST-*.xml",  // Report file name pattern (adjust as necessary)
                    "it.mohitsaini@gmail.com"  // Recipient email
                )
            }
        }

        failure {
            script {
                send_email(
                    "Unit Testing Failure: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                    "The unit tests have failed.\n\nPlease find the attached unit test report.",
                    "target/surefire-reports",  // Path to the directory where your unit test reports are saved
                    "TEST-*.xml",  // Report file name pattern (adjust as necessary)
                    "it.mohitsaini@gmail.com"  // Recipient email
                )
            }
        }
    }
}
