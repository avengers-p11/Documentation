@Library('Jenkins-shared-libraries') _

pipeline {
    agent any

    stages {
        // Stage to clone the repository
        stage('Code Clone') {
            steps {
                script {
                    clone_repo()  
                }
            }
        }

        // Stage for unit testing
        stage('Unit Testing') {
            steps {
                script {
                    unit_testing('Maven')  
                }
            }
        }
    }

    post {
        success {
            script {
                send_email(
                    subject: "Unit Testing Success: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                    body: "The code has been Tested successfully.\n\nPlease find the attached Test report.",
                    attachPath: "target",  
                    attachFile: "unit-test-report.txt",  
                    to: "it.mohitsaini@gmail.com"  
                )
            }
        }

        failure {
            script {
                send_email(
                    subject: "Unit Test Failure: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                    body: "The Unit test has failed.\n\nPlease find the attached compilation report.",
                    attachPath: "target", 
                    attachFile: "unit-test-report.txt",  
                    to: "it.mohitsaini@gmail.com"  
                )
            }
        }
    }
}
