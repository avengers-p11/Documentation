pipeline {
    agent any

    tools {
        maven 'Maven'
    }

    environment {
        scannerHome = tool 'Sonar'
    }

    stages {
        stage('Clone Repository') {
            steps {
                echo 'Cloning the repository...'
                git branch: 'main', url: 'git@github.com:avengers-p11/salary-api.git'
            }
        }

        stage('Code Compilation') {
            steps {
                sh '''
                    mvn compile > static-code-analysis-report.txt
                    cat static-code-analysis-report.txt
                '''
            }
        }

        stage('Static Code Analysis') {
            steps {
                script {
                    withSonarQubeEnv('Sonar') {
                        sh """
                          ${scannerHome}/bin/sonar-scanner \
                            -Dsonar.projectKey=salary \
                            -Dsonar.projectName=Salary-api \
                            -Dsonar.host.url=http://52.91.122.31:9000 \
                            -Dsonar.login=squ_4f371ade2db48dafec85157cda9d3d07e6a5c456 \
                            -Dsonar.java.binaries=target/classes \
                            -Dsonar.issue.types=Static \
                            -Dsonar.report.export.path=target/sonar-report.json \
                            -Dsonar.html.report=target/sonar-report.html
                        """
                    }
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline completed.'
            archiveArtifacts artifacts: 'static-code-analysis-report.txt', allowEmptyArchive: true
            archiveArtifacts artifacts: 'target/sonar-report.json', allowEmptyArchive: true
            archiveArtifacts artifacts: 'target/sonar-report.html', allowEmptyArchive: true
        }
        success {
            emailext(
                attachmentsPattern: 'static-code-analysis-report.txt,target/sonar-report.json,target/sonar-report.html',
                body: """${currentBuild.currentResult}: Job ${env.JOB_NAME} build ${env.BUILD_NUMBER}
More info at: ${env.BUILD_URL}""",
                recipientProviders: [developers(), requestor()],
                subject: "Jenkins Build ${currentBuild.currentResult}: Job ${env.JOB_NAME}",
                to: 'it.mohitsaini@gmail.com'
            )
        }
        failure {
            echo 'Pipeline failed.'
            emailext(
                to: 'it.mohitsaini@gmail.com',
                subject: 'Jenkins Pipeline Failure: Salary-api',
                body: '''Hello,

The Jenkins pipeline has failed. Please check the logs.'''.stripIndent(),
                attachmentsPattern: 'static-code-analysis-report.txt,target/sonar-report.json,target/sonar-report.html'
            )
        }
    }
}
