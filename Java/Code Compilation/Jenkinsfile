@Library('Jenkins-shared-libraries') _

pipeline {
    agent any

    stages {
     
        stage('Code Clone') {
            steps {
                script {
                    clone_repo()  
                }
            }
        }

  
        stage('Unit Testing') {
            steps {
                script {
                    unit_testing('Maven')  
                }
            }
        }
    }

    post {
        success {
            script {
                send_email(
                    subject: "Code Compilation Success: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                    body: "The code has been compiled successfully.\n\nPlease find the attached compilation report.",
                    attachPath: "target",  
                    attachFile: "compile-report.txt", 
                    to: "it.mohitsaini@gmail.com"  
                )
            }
        }

        failure {
            script {
                send_email(
                    subject: "Code Compilation Failure: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                    body: "The code compilation has failed.\n\nPlease find the attached compilation report.",
                    attachPath: "target",  
                    attachFile: "compile-report.txt",  
                    to: "it.mohitsaini@gmail.com"  
                )
            }
        }
    }
}
