pipeline {
    agent any

    tools {
        maven 'Maven 3.9.9'  // Ensure this matches your Global Tool Configuration
    }

    environment {
        GIT_URL = 'git@github.com:avengers-p11/salary-api.git' // Repository URL
        DEFAULT_BRANCH = 'main' // Default branch
        REPORT_FILE = 'compilation-report.txt' // Report file name
    }

    parameters {
        string(name: 'BRANCH', defaultValue: 'main', description: 'Branch to build')
        string(name: 'EMAIL_RECIPIENTS', defaultValue: 'it.mohitsaini@gmail.com', description: 'Notification email address')
    }

    stages {
        stage('Clone Repository') {
            steps {
                script {
                    def branchToBuild = params.BRANCH ?: DEFAULT_BRANCH
                    git branch: branchToBuild, url: GIT_URL
                }
            }
        }

        stage('Code Compilation') {
            steps {
                sh """
                    mvn clean install | tee ${REPORT_FILE}
                    echo "Report generated:"
                    ls -l ${REPORT_FILE}
                """
            }
        }

        stage('Run Tests') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Package Application') {
            steps {
                sh 'mvn clean package'
            }
        }
    }

    post {
        always {
            echo 'Pipeline completed.'
            archiveArtifacts artifacts: "${REPORT_FILE}", allowEmptyArchive: true
        }
        success {
            emailext(
                attachmentsPattern: "${REPORT_FILE}",
                body: """${currentBuild.currentResult}: Job ${env.JOB_NAME} build ${env.BUILD_NUMBER}
More info at: ${env.BUILD_URL}""",
                recipientProviders: [developers(), requestor()],
                subject: "Jenkins Build ${currentBuild.currentResult}: Job ${env.JOB_NAME}",
                to: "${params.EMAIL_RECIPIENTS}"
            )
        }
        failure {
            echo 'Pipeline failed.'
            emailext(
                to: "${params.EMAIL_RECIPIENTS}",
                subject: "Jenkins Pipeline Failure: ${env.JOB_NAME}",
                body: """Hello,

The Jenkins pipeline has failed. Please check the logs.""".stripIndent()
            )
        }
    }
}
