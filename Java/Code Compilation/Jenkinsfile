@Library('Java') _

pipeline {
    agent any

    stages {
        
        stage('Code Clone') {
            steps {
                script {
                 
                    clone_repo()
                }
            }
        }

       
        stage('Code Compilation') {
            steps {
                script {
              
                    compile_code('Maven')
                }
            }
        }
    }

    post {
        success {
            script {
               
                send_email(
                    "Code Compilation Success: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                    "The code has been compiled successfully.\n\nPlease find the attached compilation report.",
                    "target",  
                    "compile-report.txt",  
                    "it.mohitsaini@gmail.com"  
                )
            }
        }

        failure {
            script {
             
                send_email(
                    "Code Compilation Failure: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                    "The code compilation has failed.\n\nPlease find the attached compilation report.",
                    "target",  
                    "compile-report.txt", 
                    "it.mohitsaini@gmail.com"  
                )
            }
        }
    }
}
